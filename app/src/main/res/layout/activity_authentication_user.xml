<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include layout="@layout/include_toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10px"
                android:padding="@dimen/dimen_10px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/logo"
                    android:layout_marginLeft="@dimen/dimen_16px"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/image_logo"
                    android:layout_marginLeft="@dimen/dimen_16px"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="爱健康"
                        android:textSize="@dimen/text_16px"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_logo"
                        android:layout_marginTop="@dimen/dimen_16px"
                        android:layout_below="@+id/tv_title"
                        android:text="这是广告语"
                        android:textSize="@dimen/text_14px"
                        android:textColor="@color/default_text_color"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写以下认证资料"
                android:textSize="@dimen/text_14px"
                android:textColor="@color/default_text_color"
                android:layout_margin="@dimen/dimen_16px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_frame_black"
                android:padding="@dimen/dimen_10px"
                android:layout_marginRight="@dimen/dimen_10px"
                android:layout_marginLeft="@dimen/dimen_10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="姓名"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="请输入姓名"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="昵称"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="请输入昵称"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:id="@+id/rt_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="性别"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:drawableRight="@mipmap/business_o_icon_02"
                        android:drawablePadding="@dimen/dimen_10px"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:text="男"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="身高"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="m"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="体重"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="kg"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="身份证号"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="请输入身份证号"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="银行卡号"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="请输入银行卡号"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="银行名称"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="请输入银行名称"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="支付宝账号"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="请输入支付宝账号"
                        android:background="@null"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:layout_marginRight="@dimen/dimen_10px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10px"
                        android:text="支付宝收款码"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_14px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_10px"
                        android:textSize="@dimen/text_14px"
                        android:text="上传"
                        android:textColor="@color/default_text_color"/>
                </RelativeLayout>
            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40px"
                android:background="@drawable/frame_blue_true"
                android:layout_marginLeft="@dimen/dimen_16px"
                android:layout_marginRight="@dimen/dimen_16px"
                android:layout_marginTop="@dimen/dimen_32px"
                android:layout_marginBottom="@dimen/dimen_32px"
                android:text="提交认证"
                android:textSize="@dimen/text_14px"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>