<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/image_shop_area"
            android:layout_width="@dimen/dimen_60px"
            android:layout_height="@dimen/dimen_60px"
            android:layout_centerVertical="true"
            android:background="@mipmap/logo"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_shop_area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_shop_area"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:layout_marginTop="@dimen/dimen_8px"
            android:maxEms="12"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="南宁御姿秀美容院"
            android:textSize="@dimen/text_14px"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/tv_shop_area_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shop_area_name"
            android:layout_toRightOf="@+id/image_shop_area"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:layout_marginTop="@dimen/dimen_10px"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="美容减肥，100元瘦5斤美容减肥，100元瘦5斤美容减肥，100元瘦5斤"
            android:textSize="@dimen/text_10px"
            android:textColor="@color/default_hint_color"/>

        <RelativeLayout
        android:id="@+id/rt_shop_area_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_shop_area"
        android:layout_marginLeft="@dimen/dimen_16px"
        android:layout_below="@+id/tv_shop_area_details"
        android:layout_marginTop="@dimen/dimen_8px"
            android:visibility="gone">
       <Button
           android:id="@+id/btn_shop_area_discounts"
           android:layout_width="@dimen/dimen_60px"
           android:layout_height="@dimen/dimen_20px"
           android:background="@drawable/frame_blue"
           android:text="优惠"
           android:textSize="@dimen/text_12px"
           android:textColor="@color/default_text_color"/>
        <TextView
            android:id="@+id/tv_shop_area_discounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_shop_area_discounts"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="美容减肥，100元瘦5斤美容减肥，100元瘦5斤美容减肥，100元瘦5斤"
            android:textSize="@dimen/text_12px"
            android:textColor="@color/default_text_color"/>
    </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"
        android:layout_marginTop="@dimen/dimen_16px"
        android:layout_marginBottom="@dimen/dimen_16px"/>
</LinearLayout>