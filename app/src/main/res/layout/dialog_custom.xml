<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dimen_16px"
        android:text="选择分享平台"
        android:textSize="@dimen/text_16px"
        android:textColor="@color/default_hint_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/weChat_friend_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_10px"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selector_onclick">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/share_wechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_16px"
                android:text="微信好友"
                android:textSize="@dimen/text_16px"
                android:textColor="@color/default_hint_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weChat_moments_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dimen_10px"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selector_onclick">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/share_friend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_16px"
                android:text="微信朋友圈"
                android:textSize="@dimen/text_16px"
                android:textColor="@color/default_hint_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>